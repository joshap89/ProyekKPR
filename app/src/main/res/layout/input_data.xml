<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#673AB7"
    tools:context=".MainActivityKPR"
    android:padding="30dp"
    >

    <TextView
        android:text="KALKULATOR KPR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/kalkulator"
        android:textColor="#76FF03"
        android:gravity="center"
        android:textStyle="bold"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/NilaiPinjaman"
            android:text="@string/masukkanpinjaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#76FF03"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/inPinjaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff5722"
            android:textStyle="bold"
            android:inputType="phone"
            android:imeOptions="actionNext"
            />

        <TextView
            android:id="@+id/Yield"
            android:text="@string/yield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#76FF03"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/inYield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff5722"
            android:textStyle="bold"
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/jw"
            android:text="@string/jw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#76FF03"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/inJW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ff5722"
            android:textStyle="bold"
            android:inputType="phone"
            />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:padding="0dp"
           android:paddingLeft="40dp"
           android:layout_gravity="center"

           >

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="1"
               android:layout_marginRight="10dp"
               >
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Proses"
                   android:id="@+id/ProsesKal"
                   android:onClick="ProsesKalkulator"
                   android:gravity="center"
                   android:background="#76FF03"
                   android:textColor="#673AB7"
                   android:textStyle="bold"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:weightSum="1"
               >
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="KELUAR"
                   android:id="@+id/home"
                   android:gravity="center"
                   android:onClick="Home"
                   android:background="#76FF03"
                   android:textColor="#673AB7"
                   android:textStyle="bold"
                   />
           </LinearLayout>

       </LinearLayout>


    </LinearLayout>


</LinearLayout>